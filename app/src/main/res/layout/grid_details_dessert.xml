<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/middle_short_margin"
        android:orientation="vertical"
        android:background="@drawable/grid_view_elem_background">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="2dp"
            android:layout_gravity="center_vertical">

            <ImageView
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:id="@+id/ivDessertListImage"
                android:scaleType="centerCrop"/>

            <ImageView
                android:id="@+id/ivIsFavorite"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_margin="2dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:id="@+id/tvDifficulty"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textSize="@dimen/text_size_big"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:paddingRight="7dp"
                android:paddingEnd="7dp"
                android:paddingLeft="7dp"
                android:paddingStart="7dp"/>

        </RelativeLayout>

        <include layout="@layout/grid_dessert_properties"
            android:layout_marginTop="-10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Properties"
            android:layout_gravity="center_vertical" />

    </LinearLayout>
</RelativeLayout>
